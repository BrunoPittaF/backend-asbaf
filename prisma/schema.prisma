// Prisma schema example
// Ensure you have a `prisma/schema.prisma` file with the following content:

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int         @id @default(autoincrement())
  cpf              String      @unique
  email            String      @unique
  password         String
  address          String
  birthDate        String
  name             String
  cellphone        String
  cellMobile       String
  cellSefaz        String?
  sectorSefaz      String?
  numberAssociated String
  relatives        Relatives[]
  instagram        String?
  threads          String?
  facebook         String?
  Image            String?
}

model Relatives {
  id               Int    @id @default(autoincrement())
  cpf              String @unique
  position         Int
  name             String
  numberAssociated String
  User             User   @relation(fields: [userCpf], references: [cpf])
  userCpf          String
}

model Partner {
  id        Int     @id @default(autoincrement())
  cnpj      String  @unique
  name      String
  cellphone String
  email     String
  instagram String?
  website   String?
  note      String?
  image     String?
  isPartner Boolean
}

model Notices {
  id       Int     @id @default(autoincrement())
  title    String
  content  String
  subtitle String
  date     String
  image    String?
}
